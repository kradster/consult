<!DOCTYPE html>
<html lang="en">

<head>
    <meta name='description' content="Find latest freshers jobs in India. Search for best suitable job vacancies in India's top companies and apply for IT, MBA, accounting, BPO, marketing and sales & other jobs in India.">
    <% include ../../partials/pre_head %>
        <title></title>
</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TGKGPG3" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->


    <!-- NAVIGATION BAR START -->
    <% include ../../partials/admin_header %>
        <!-- NAVIGATION BAR END -->

        <!-- HEADER START -->
        <div class="row white-text blue darken-4">
            <div class="col s12">
                <div class="row" style="height:50px;"></div>
                <h2>
                    <b>FRESHERS JOBS IN INDIA - APPLY NOW</b>
                </h2>
                <div class="row" style="height:50px;"></div>
            </div>
        </div>
        <!-- HEADER END -->

        <!-- <div class="row" style="height:50px;"></div> -->
        <!--  <div id="userprofile" class="row no-padd">

    </div>
-->
        <div class="row">
            <div class="col l10 offset-l1 s12">
                <div class="col s12">
                    <h3>
                        <b>ALL USERS</b>
                    </h3>
                    <div class="divider"></div>
                    <div class="row">
                        <div class="col s9"><a href="/admin/usercsv">Export to csv</a></div>
                        <div class="col s3">
                            <input type="text" name="search" id="search" placeholder="Search users" oninput="search()"/>
                        </div>
                    </div>
                    <br>
                    <div>
                        <table class="striped highlight">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Verified</th>
                                    <th>Email</th>
                                    <th>Phone No</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody id="userlist">
                            <% for(var i=0; i < users.length; i++) { %>
                            <tr id="<%= users[i].name.first %>">
                                <td><%= users[i].name.first %> <%= users[i].name.last %></td>
                                <td><%= users[i].verified %></td>
                                <td><%= users[i].email %></td>
                                <td><%= users[i].phoneno %></td>
                                <td><%= users[i].role %></td>
                                <td><a href="/admin/user/<%= users[i]._id %>" class="btn right">View all data</a>
                            <% } %>
                                </td>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col s12" style="height:50px;"></div>
        </div>

        <!-- FOOTER START -->
        <% include ../../partials/pre_footer %>
            <!-- FOOTER END -->
            <script>
                arr=$('#userlist').children();
                function search(){
                    let term = $('#search').val().toLowerCase();
                    $('#userlist').html(arr);
                    if(term!=""){
                        let userlist = document.getElementById('userlist').children;
                        str="";
                        for(let  i=0; i<userlist.length ; i++){
                            if(userlist[i].id.toLowerCase().indexOf(term) > -1 )
                                str+= "<tr>"+userlist[i].innerHTML+"</tr>";
                        }
                        if(str)
                            $('#userlist').html(str);
                        else
                            $('#userlist').html("<center>No users found</center>");
                    }else{
                        $('#userlist').html(arr);
                    }
                }
            </script>
            <!-- Compiled and minified JavaScript -->
</body>

</html>