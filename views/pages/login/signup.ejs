        var rows = $('div.signup-body');
        console.log(WindowWidth);
        if(WindowWidth <= 425){
            rows.each(function(i){
                if(i==0){

                }
                else{
                $(this).css({'height':'auto'});
                }
            });
        }
       
    </script>
</body>
</html>