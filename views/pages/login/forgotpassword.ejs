<!DOCTYPE html>
<html lang="en">

<head>
    <meta name='description' content='Login on JobLana Platform to get in front of 500+ recruiters across the globe.'>
    <% include ../../partials/pre_head %>
    <style>
            input:not([type]),
                input[type=text]:not(.browser-default),
                input[type=password]:not(.browser-default),
                input[type=email]:not(.browser-default) {
                    border:solid  2px  #ccc  !important;
                    outline: none;
                    height: 3rem;
                    width: 100%;
                    font-size: 16px;
                    margin: 0 0 8px 0;
                    padding: 0;
                    background-color: transparent;
                    box-shadow: 0px
                }
                
                input:not([type]):focus:not([readonly]),
                input[type=text]:not(.browser-default):focus:not([readonly]),
                input[type=password]:not(.browser-default):focus:not([readonly]),
                input[type=email]:not(.browser-default):focus:not([readonly]) {
                    border:solid  2px  #646af2  !important;
                    -webkit-box-shadow: none;
                    box-shadow: none;
                }
                
                input::-webkit-input-placeholder {
                    color: grey;
                }
                
                .no-padd {
                    padding: 0px !important;
                }
                .login-body{
                    background:url('/img/forgotbody.jpg');
                    background-repeat: no-repeat;
                    background-position:bottom right;
                }
                .login-header{
                    background:url('/img/forgot.gif');
                    background-repeat: no-repeat;
                    background-size: cover;
                    background-position:center;
                }
    
    </style>
</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TGKGPG3" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
    
    <!-- NAVIGATION BAR START -->
    <% include ../../partials/pre_header %>
    <!-- NAVIGATION BAR END -->
    
    
    <div class="row login-body" style="display:flex;height:100%;">
            <div style="flex:1;margin:auto;width:100%;">
            <div class="col s12 " style="height:50px;"></div>
            <form class="col l6 offset-l3 s12" action="/user/forgot-password" method="POST">
                <div class="card col l8 offset-l2 s12 z-depth-3 no-padd" style="padding:10px;border-radius:10px; border-top:5px solid #2962ff;background:rgba(255,255,255,0.8);overflow: hidden;">
                    <div class="col s12 no-padd login-header" style="height:150px;overflow: hidden;">
                    </div>
                    <center>
                        <div class="col s12" style="height:20px;"></div>
                        <h4 class="indigo-text">ENTER EMAIL</h4>
                        <p>A password reset link will be sent to your email</p>
                    </center>
                    <br>
                    <div class="col s12">
                    <div class="col s2" style="padding-top:30px;">
                            <i class="far fa-envelope fa-3x grey-text lighten-3"></i>
                    </div>
                    <div class="col s10">
                            <div>Enter your Email Here</div>
                            <input placeholder="Email" id="email" name="email" type="text" class="blue-text" style="padding:5px;margin-left:-5px;" > 
                    </div>
                    </div>
                         <div class="input-field col s12">
                             <center>
                                 <input name="loginsubmit" style="margin-top:0px;border-radius:5px;transition:all .3s ease-in-out;" type="submit" class="btn btn-large blue accent-4 z-depth-5 white-text" value="SEND EMAIL"><br><br>
                                 
                             </center>
                         </div>
                         
                    
                </div>
            </form>
            </div>
            
        </div>

<!-- FOOTER START -->
    <% include ../../partials/pre_footer %>
<!-- FOOTER END -->

</body>
</html>